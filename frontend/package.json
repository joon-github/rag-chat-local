{
  "name": "rag-chat",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.example.ragchat",
    "productName": "RAGChat",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build",
      "app": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "dist/**/*",
      "../backend/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend/dist",
        "to": "backend"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    }
  },
  "devDependencies": {
    "electron": "^x.x.x",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "tree-kill": "^1.2.2"
  }
}
